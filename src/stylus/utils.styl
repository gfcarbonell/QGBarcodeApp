#page-numbers
    display flex 
    justify-content center 
    align-items center 
    text-align center
    >li
        margin .5em 0

.printer 
    overflow hidden 
    height 70vh
    width 100%
    display flex 
    justify-content center
    overflow-y auto
.divToPrint
    background white
    width 210mm
    height 297mm
    padding 8mm 7mm 14mm 7mm
.barcode-section >svg {
    margin: 0;
    padding: 0;
    height: 61px;
    background: transparent
}
.barcodes {
    display flex 
    flex-wrap wrap
    width 100% 
    height 100%
    justify-content space-between
}

.barcode 
    box-sizing border-box
    min-width 63mm
    margin 0 auto
    font-weight bolder
    position relative
    &-title 
        font-size 8px
        margin 0 auto
    &-header 
        font-size 8px
        height 6mm
        display flex
        justify-content center
        align-items center
        padding 0 5mm
    &-section 
        height 13mm
        display flex 
        justify-content center
        &-avatar
            position absolute
            top 3.8mm
    &-footer 
        z-index 0
        font-size 8px
        height 6mm
    
#file
    height 100px
@media (min-width: 576px)
    .title 
        font-size 2.7em
    .slogan 
        font-size 1.1em

